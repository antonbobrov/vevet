{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "jsdoc"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "ts": "never"
            }
        ],
        "linebreak-style": "off",
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "space-before-function-paren": ["error", "always"],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 3,
                "maxEOF": 1,
                "maxBOF": 1
            }
        ],
        "no-underscore-dangle": [
            "error",
            { "allowAfterThis": true, "allowAfterSuper": true }
        ],
        "class-methods-use-this": "off",
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": ["error"]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".ts"
                ]
            }
        }
    }
}